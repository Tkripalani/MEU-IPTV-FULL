# This is a basic workflow that is manually triggered
name: AGRUPADOR LISTAS

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
  schedule:
    - cron: '0 0/1 * * *'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:

      - name: execute py script # run sj-gobierno.py to get the latest data
        run: python agrupadorlistas.py
          
      - name: git add
        run: |
          git add -A
          ls -la 
          
      - name: commit & push
        run: |
          git commit -m "links atualizados"
          git push
